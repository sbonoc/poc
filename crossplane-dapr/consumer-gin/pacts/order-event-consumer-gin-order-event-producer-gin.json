{
  "consumer": {
    "name": "order-event-consumer-gin"
  },
  "provider": {
    "name": "order-event-producer-gin"
  },
  "interactions": [
    {
      "description": "a publish order request",
      "providerState": "a valid order publish request",
      "request": {
        "method": "POST",
        "path": "/publish",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "amount": 55.1,
          "id": "ORD-GIN-300"
        },
        "matchingRules": {
          "$.body.amount": {
            "match": "type"
          },
          "$.body.id": {
            "match": "type"
          }
        }
      },
      "response": {
        "status": 202,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "orderId": "ORD-GIN-300",
          "status": "accepted"
        },
        "matchingRules": {
          "$.headers.Content-Type": {
            "match": "regex",
            "regex": "application\\/json.*"
          },
          "$.body.orderId": {
            "match": "type"
          },
          "$.body.status": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}